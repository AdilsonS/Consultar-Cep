<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConsultaCPF"
             x:Class="ConsultaCPF.MainPage">

    <StackLayout BackgroundColor="#ffbf00" Padding="30" Spacing="30">
        <Image Source="correios.jpg"/>
        <Entry Placeholder="Digite o cep" PlaceholderColor="#ffbf00" BackgroundColor="Yellow" x:Name="CEP"/>
        <Button Text="Buscar CEP" TextColor="#ffffff" BackgroundColor="#00416b" x:Name="BTNBUSCAR"/>
        <Label HorizontalOptions="Center" VerticalOptions="CenterAndExpand" x:Name="RETORNO"/>
    </StackLayout>

</ContentPage>
